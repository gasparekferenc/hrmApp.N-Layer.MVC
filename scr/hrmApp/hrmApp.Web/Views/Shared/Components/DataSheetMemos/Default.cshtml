@using hrmApp.Web.Constants
@model hrmApp.Web.ViewModels.ComponentsViewModels.MemoViewModel

@{
    ViewData["CardTitleName"] = "Feljegyzés";
}
<div style="height: 90%;">
    <!-- .card -->
    <div class="card card-secondary">

        <!-- .card-header -->
        <div class="card-header">
            <h2 class="card-title">@ViewData["CardTitleName"]</h2>
        </div>
        <!-- /.card-header -->

        <form asp-action="CreateMemo" id="CreateMemo" name="CreateMemo">
            <input type="hidden" asp-for="EmployeeId" />
            <input type="hidden" asp-for="ApplicationUserId" />
            <input type="hidden" asp-for="EntryDate" />
            <input type="hidden" asp-for="AppUserEntry" />
            <!-- Az összes szükséges attributum felsorolása hidden-két -->

            <!-- .card-body -->
            <div class="card-body" style="min-height: 251px">

                @if (!String.IsNullOrEmpty(Model.Message))
                {
                    if (Model.Message == BaseValues.CreateMemoSuccess)
                    {
                        <div class="alert alert-success alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <span><i class="icon fas fa-check"></i> Info - @Model.Message</span>
                        </div>
                    }
                    if (Model.Message == BaseValues.CreateMemoFailed)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <span><i class="icon fas fa-ban"></i> Hiba - @Model.Message</span>
                        </div>
                    }
                }


                <div class="form-group">
                    <label asp-for="Entry" class="control-label"></label>
                    <textarea asp-for="Entry" class="form-control" placeholder="Feljegyzés..."></textarea>
                    <span asp-validation-for="Entry" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="form-group col-md-6">
                        <div class="icheck-default">
                            <input asp-for="IsReminder" class="form-control" id="IsReminder" />
                            <label asp-for="IsReminder" class="control-label"></label>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        @* <label asp-for="DeadlineDate" class="control-label"></label> *@
                        <input asp-for="DeadlineDate" class="form-control" id="DeadlineDate" disabled />
                        @* <span asp-validation-for="DeadlineDate" class="text-danger"></span> *@
                    </div>
                </div>

            </div>
            <!-- /.card-body -->

            <!-- card-footer -->
            <div class="card-footer">
                <div>
                    <div class="row justify-content-center">
                        <div class="col-md-3 form-group">
                            <input class="btn btn-primary btn-block" type="submit" value="Mentés" />
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.card-footer -->

        </form>
    </div>
    <!-- /.card -->
</div>
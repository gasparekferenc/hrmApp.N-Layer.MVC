@model IEnumerable<hrmApp.Web.DTO.OrganizationDTO>

@{
    Layout = "Layout/_LayoutTable";
    ViewData["Title"] = "Szervezet";
    ViewData["CardHeaderName"] = ViewData["Title"] + " létrehozás";
    ViewData["PageHeaderName"] = ViewData["Title"] + " kezelés";
    ViewData["CreateButton"] = true;
}

<div class="card-body">
    <table id="hrmTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.OrganizationName)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.Address)</th>
                <th>@Html.DisplayNameFor(model => model.ContactName)</th>
                <th>@Html.DisplayNameFor(model => model.ContactEmail)</th>
                <th>@Html.DisplayNameFor(model => model.ContactPhone)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                <th>@Html.DisplayNameFor(model => model.PreferOrder)</th>
                <th>Műveletek</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.OrganizationName)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Address)</td>
                    <td>@Html.DisplayFor(modelItem => item.ContactName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ContactEmail)</td>
                    <td>@Html.DisplayFor(modelItem => item.ContactPhone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                    <td>@Html.DisplayFor(modelItem => item.PreferOrder)</td>
                    <td class="align-middle">
                        <div class="row justify-content-center">
                            <div class="btn-group">
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id"
                                data-toggle="tooltip" title="Szerkesztés">
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id"
                                data-toggle="tooltip" title="Részletek">
                                    <i class="fas fa-file-alt"></i>
                                </a>
                                <a class="btn btn-sm btn-outline-secondary" asp-action="Delete" asp-route-id="@item.Id"
                                data-toggle="tooltip" title="Törlés">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <!-- /.table-responsive -->
</div>
<!-- /.card-body -->

<!-- Init Tables -->
@section InitTableScripts {
<partial name="_InitDataTablesScript" />
}
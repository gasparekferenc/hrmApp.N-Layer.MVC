@model hrmApp.Web.ViewModels.ManageViewModels.ChangePasswordViewModel
@{
    Layout = "Layout/_LayoutCard";
    ViewData["Title"] = "Jelszó csere";
    ViewData["CardTitleName"] = ViewData["Title"] + "";
}


<form asp-action="ChangePassword">
    @* <input asp-for="Code" type="hidden" />
        <input asp-for="Email" type="hidden" />
        <input asp-for="UserId" type="hidden" /> *@


    <!-- .card-body -->
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <div asp-validation-summary="All" class="text-danger"></div> *@
        <div class="bg-light" style="padding: 10px;">Jelszó megváltoztatása</div>
        <hr>

        <div class="form-group">
            <label asp-for="OldPassword"></label>
            <div class="input-group">
                <input asp-for="OldPassword" class="form-control" placeholder="Jelenlegi jelszó" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewPassword"></label>
            <div class="input-group">
                <input asp-for="NewPassword" class="form-control" placeholder="Új jelszó" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <div class="input-group">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Új jelszó megerősítése" />
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>



    </div>
    <!-- /.card-body -->
    <!-- card-footer -->
    <div class="card-footer">
        <div>
            <div class="row justify-content-center">
                <div class="col-md-3 form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Mentés" />
                </div>
                <div class="col-md-3">
                    @* <a class="btn btn-secondary btn-block" asp-action="Index">Vissza</a> *@
                    <a class="btn btn-secondary btn-block" onclick="window.history.back();">Vissza</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-footer -->
</form>

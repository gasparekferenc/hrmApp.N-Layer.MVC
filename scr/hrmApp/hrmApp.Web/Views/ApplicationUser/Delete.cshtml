@model hrmApp.Web.DTO.ApplicationUserDTO

@{
    Layout = "Layout/_LayoutCard";
    ViewData["Title"] = "Felhasználó";
    ViewData["CardTitleName"] = ViewData["Title"] + " adatai";
    ViewData["PageHeaderName"] = ViewData["Title"] + " kezelés";
}

<!-- .card-body -->
<div class="card-body">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <table class="table">
        <tbody>
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.UserName) </th>
                <td> @Html.DisplayFor(model => model.UserName) </td>
            </tr>
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.Email) </th>
                <td> @Html.DisplayFor(model => model.Email) </td>
            </tr>
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.SurName) </th>
                <td> @Html.DisplayFor(model => model.SurName) </td>
            </tr>
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.ForeName) </th>
                <td> @Html.DisplayFor(model => model.ForeName) </td>
            </tr>
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.PhoneNumber) </th>
                <td> @Html.DisplayFor(model => model.PhoneNumber) </td>
            </tr>
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.Description) </th>
                <td> @Html.DisplayFor(model => model.Description) </td>
            </tr>
            @* <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.IsActive) </th>
                <td> @Html.DisplayFor(model => model.IsActive) </td>
                </tr> *@
            <tr>
                <th style="width:50%"> @Html.DisplayNameFor(model => model.RowVersion) </th>
                <td> @Html.DisplayFor(model => model.RowVersion) </td>
            </tr>
        </tbody>
    </table>
</div>
<!-- /.card-body -->
<!-- card-footer -->
<div class="card-footer">
    <div>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <a class="btn btn-danger btn-block" data-toggle="modal" data-target="#modalDelete">Törlés</a>
            </div>
            <div class="col-md-3">
                <a class="btn btn-secondary btn-block" asp-action="Index">Vissza</a>
            </div>
        </div>
    </div>
</div>
<!-- /.card-footer -->

<!-- Modal -->
<div class="modal fade" id="modalDelete" tabindex="-1" role="dialog" aria-labelledby="modalDeleteTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="modalDeleteTitle">@ViewData["Title"] törlés megerősítése</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Biztosan törlölni szeretnéd a @ViewData["Title"]ót?
            </div>
            <div class="modal-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserName" />
                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="SurName" />
                    <input type="hidden" asp-for="ForeName" />
                    <input type="hidden" asp-for="PhoneNumber" />
                    <input type="hidden" asp-for="Description" />
                    <input type="hidden" asp-for="RowVersion" />
                    <input type="submit" class="btn btn-danger" value="Törlés" />
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Mégsem</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- /.modal -->

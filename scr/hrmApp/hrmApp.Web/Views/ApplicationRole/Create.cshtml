@model hrmApp.Web.ViewModels.RoleViewModel

@{
    Layout = "Layout/_LayoutCard";
    ViewData["Title"] = "Szerepkör";
    ViewData["CardTitleName"] = "Új " + ViewData["Title"] + " létrehozása";
    ViewData["PageHeaderName"] = ViewData["Title"] + " kezelés";
}


<form asp-action="Create">
    <!-- .card-body -->
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RoleName" class="control-label"></label>
            <input asp-for="RoleName" class="form-control" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>
    <!-- /.card-body -->
    <!-- card-footer -->
    <div class="card-footer">
        <div>
            <div class="row justify-content-center">
                <div class="col-md-3 form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Mentés" />
                </div>
                <div class="col-md-3">
                    <a class="btn btn-secondary btn-block" asp-action="Index">Vissza</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-footer -->
</form>

@model hrmApp.Web.ViewModels.RoleClaimsViewModel
@{
    Layout = "Layout/_LayoutCard";
    ViewData["Title"] = "Jogosultság";
    ViewData["CardTitleName"] = ViewData["Title"] + " adatainak szerkesztése";
    ViewData["PageHeaderName"] = ViewData["Title"] + " kezelés";
}
<form asp-action="ManageClaim">
    <input type="hidden" asp-for="Id" />
    <!-- .card-body -->
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="form-group ">
                    <label asp-for="RoleName" class="control-label"></label>
                    <input asp-for="RoleName" class="form-control" readonly />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>

                @{
                    int i = 0;
                }
                @foreach (var item in Model.RoleClaims)
                {
                    <div class="form-group">
                        <div class="icheck-default">
                            <input asp-for="RoleClaims[i].HasClaim" class="form-control" />
                            <label asp-for="RoleClaims[i].HasClaim" class="control-label">
                                @Html.DisplayFor(model => item.ClaimName)
                            </label>
                        </div>
                    </div>
                //create two hidden fields for the id and rolename values
                    <input type="hidden" asp-for="RoleClaims[i].Id" />
                    <input type="hidden" asp-for="RoleClaims[i].ClaimName" />
                    i++;
                }
            </div>
        </div>
    </div>
    <!-- /.card-body -->
    <!-- card-footer -->
    <div class="card-footer">
        <div>
            <div class="row justify-content-center">
                <div class="col-md-3 form-group">
                    <input class="btn btn-primary btn-block" type="submit" value="Mentés" />
                </div>
                <div class="col-md-3">
                    @* <a class="btn btn-secondary btn-block" asp-action="Index">Vissza</a> *@
                    <a class="btn btn-secondary btn-block" onclick="window.history.back();">Vissza</a>
                </div>
            </div>
        </div>
    </div>
    <!-- /.card-footer -->
</form>
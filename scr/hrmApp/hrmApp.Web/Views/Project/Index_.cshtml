@model IEnumerable<hrmApp.Web.DTO.ProjectDTO>

@{
    var mainEntityName = "Projekt";
    ViewData["Title"] = mainEntityName;
}

@section Styles {
<partial name="_DataTablesStyles" />
}
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">@mainEntityName kezelés</h1>
            </div>
        </div>
    </div>
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a asp-action="Create" class="btn btn-primary">@mainEntityName létrehozás</a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="hrmTable" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.ProjectName)</th>
                                    <th>@Html.DisplayNameFor(model => model.NumberOfEmployee)</th>
                                    <th>@Html.DisplayNameFor(model => model.StartDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                                    <th>@Html.DisplayNameFor(model => model.IsActive)</th>
                                    <th>Műveletek</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.ProjectName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NumberOfEmployee)</td>
                                        <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                        <td>@Html.DisplayFor(modelItem => item.IsActive)</td>
                                        <td class="align-middle">
                                            <div class="row justify-content-center">
                                                <div class="btn-group">
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit"
                                                    asp-route-id="@item.Id" data-toggle="tooltip" title="Szerkesztés">
                                                        <i class="fas fa-pencil-alt"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details"
                                                    asp-route-id="@item.Id" data-toggle="tooltip" title="Részletek">
                                                        <i class="fas fa-file-alt"></i>
                                                    </a>
                                                    <a class="btn btn-sm btn-outline-secondary" asp-action="Delete"
                                                    asp-route-id="@item.Id" data-toggle="tooltip" title="Törlés">
                                                        <i class="fas fa-trash-alt"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col-md-12 -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content Main content -->
<!-- DataTables  Init -->
@section Scripts {
<partial name="_DataTablesScripts" />
<partial name="_InitDataTablesScript" />
}